LoadModule passenger_module <%= @mod_passenger_location %>
PassengerRoot <%= @passenger_root %>
PassengerRuby <%= @passenger_ruby %>

# you probably want to tune these settings
PassengerHighPerformance  <%= @config_PassengerHighPerformance %>
PassengerMaxPoolSize      <%= @config_PassengerMaxPoolSize %>
PassengerPoolIdleTime     <%= @config_PassengerPoolIdleTime %>
PassengerMaxRequests      <%= @config_PassengerMaxRequests %>
PassengerStatThrottleRate <%= @config_PassengerStatThrottleRate %>

<% if @passenger_version =~ /^4\.\d+\.\d+/ -%>
PassengerEnabled on
<% else -%>
RailsAutoDetect On
<% end -%>
